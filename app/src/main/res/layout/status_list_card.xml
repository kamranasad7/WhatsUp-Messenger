<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_header_img"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusContactName"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:gravity="center|start"
        android:text="Name"
        android:textColor="#333333"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/status_header_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="1dp"
        android:gravity="center|start"
        android:text="15 minutes ago"
        android:textColor="#5E5E5E"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/status_header_img"
        app:layout_constraintTop_toBottomOf="@+id/statusContactName" />


</androidx.constraintlayout.widget.ConstraintLayout>