<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/status_header_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/statusContactName"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="25dp"
            android:gravity="center|left"
            android:text="Name"
            android:textColor="#333333"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/status_header_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="1dp"
            android:gravity="center|start"
            android:text="Hiiii....hows u?"
            android:textColor="#5E5E5E"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/status_header_img"
            app:layout_constraintTop_toBottomOf="@+id/statusContactName" />

        <TextView
            android:id="@+id/chatTime"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="62dp"
            android:text="3:30pm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>